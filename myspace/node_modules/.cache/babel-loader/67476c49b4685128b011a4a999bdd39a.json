{"ast":null,"code":"import ContentBase from '../components/ContentBase';\nexport default {\n  name: 'ChessView',\n  components: {\n    ContentBase\n  },\n\n  data() {\n    return {\n      elapsedTime: 0,\n      formattedTime: '0 小时 0 分钟 0 秒',\n      chessPieceColor: 1\n    };\n  },\n\n  created() {\n    this.startTimer();\n  },\n\n  methods: {\n    startTimer() {\n      setInterval(() => {\n        this.elapsedTime += 1;\n        this.formatTime();\n      }, 1000);\n    },\n\n    formatTime() {\n      const hours = Math.floor(this.elapsedTime / 3600);\n      const minutes = Math.floor(this.elapsedTime % 3600 / 60);\n      const seconds = this.elapsedTime % 60;\n      this.formattedTime = `${hours} 小时 ${minutes} 分钟 ${seconds} 秒`;\n    },\n\n    startNewGame() {\n      this.elapsedTime = 0;\n      this.formattedTime = '0 小时 0 分钟 0 秒';\n    },\n\n    exitGame() {\n      this.$router.push('chesslist');\n    }\n\n  }\n};","map":{"version":3,"mappings":"AA8CA,OAAOA,WAAP,MAAwB,2BAAxB;AAEA,eAAe;EACbC,IAAI,EAAE,WADO;EAEbC,UAAU,EAAE;IACVF;EADU,CAFC;;EAKbG,IAAI,GAAG;IACL,OAAO;MACLC,WAAW,EAAE,CADR;MAELC,aAAa,EAAE,eAFV;MAGLC,eAAe,EAAE;IAHZ,CAAP;EAKD,CAXY;;EAYbC,OAAO,GAAG;IACR,KAAKC,UAAL;EACD,CAdY;;EAebC,OAAO,EAAE;IACPD,UAAU,GAAG;MACXE,WAAW,CAAC,MAAM;QAChB,KAAKN,WAAL,IAAoB,CAApB;QACA,KAAKO,UAAL;MACD,CAHU,EAGR,IAHQ,CAAX;IAID,CANM;;IAOPA,UAAU,GAAG;MACX,MAAMC,KAAI,GAAIC,IAAI,CAACC,KAAL,CAAW,KAAKV,WAAL,GAAmB,IAA9B,CAAd;MACA,MAAMW,OAAM,GAAIF,IAAI,CAACC,KAAL,CAAY,KAAKV,WAAL,GAAmB,IAApB,GAA4B,EAAvC,CAAhB;MACA,MAAMY,OAAM,GAAI,KAAKZ,WAAL,GAAmB,EAAnC;MAEA,KAAKC,aAAL,GAAsB,GAAEO,KAAK,OAAOG,OAAO,OAAOC,OAAO,IAAzD;IACD,CAbM;;IAcPC,YAAY,GAAG;MACb,KAAKb,WAAL,GAAmB,CAAnB;MACA,KAAKC,aAAL,GAAqB,eAArB;IACD,CAjBM;;IAkBPa,QAAQ,GAAG;MACT,KAAKC,OAAL,CAAaC,IAAb,CAAkB,WAAlB;IACD;;EApBM;AAfI,CAAf","names":["ContentBase","name","components","data","elapsedTime","formattedTime","chessPieceColor","created","startTimer","methods","setInterval","formatTime","hours","Math","floor","minutes","seconds","startNewGame","exitGame","$router","push"],"sourceRoot":"","sources":["C:\\Users\\DELL\\Desktop\\chess\\myspace\\src\\views\\ChessView.vue"],"sourcesContent":["<template>\r\n  <ContentBase>\r\n    <p>棋局</p>\r\n\r\n    <div class=\"card-body\">\r\n      <div class=\"row\">\r\n        <div class=\"col-7 img-field\" style=\"position: relative;\">\r\n          <!-- Keep the chess image -->\r\n          <img src=\"../../public/chess.jpg\" alt=\"\" style=\"width: 100%;\">\r\n\r\n          <!-- Position the chess pieces using absolute positioning -->\r\n          <div v-if=\"chessPieceColor === 1\" class=\"chess-piece black-piece\"></div>\r\n          <div v-else-if=\"chessPieceColor === 2\" class=\"chess-piece white-piece\"></div>\r\n        </div>\r\n        <div class=\"col-2\">\r\n          <div class=\"card\">\r\n            <button type=\"button\" class=\"btn btn-outline-primary\" @click=\"startNewGame\">记录新的棋局</button>\r\n          </div>\r\n          <p></p>\r\n          <div class=\"card\">\r\n            <button type=\"button\" class=\"btn btn-warning\">保存当前记录</button>\r\n          </div>\r\n          <p></p>\r\n          <div class=\"card\">\r\n            <select v-model=\"chessPieceColor\" class=\"form-select\" aria-label=\"Disabled select example\">\r\n              <option selected>选择先手棋子颜色</option>\r\n              <option value=\"1\">黑子先手</option>\r\n              <option value=\"2\">白字先手</option>\r\n            </select>\r\n          </div>\r\n          <p></p>\r\n          <div class=\"card\">\r\n            <button type=\"button\" class=\"btn btn-danger\" @click=\"exitGame\">退出棋局</button>\r\n          </div>\r\n          <p></p>\r\n          <div class=\"card\">\r\n            <p class=\"fs-3\">时间：</p>\r\n            <p class=\"fs-3\">{{ formattedTime }}</p>\r\n          </div>\r\n        </div>\r\n      </div>\r\n    </div>\r\n  </ContentBase>\r\n</template>\r\n\r\n<script>\r\nimport ContentBase from '../components/ContentBase';\r\n\r\nexport default {\r\n  name: 'ChessView',\r\n  components: {\r\n    ContentBase,\r\n  },\r\n  data() {\r\n    return {\r\n      elapsedTime: 0,\r\n      formattedTime: '0 小时 0 分钟 0 秒',\r\n      chessPieceColor: 1,\r\n    };\r\n  },\r\n  created() {\r\n    this.startTimer();\r\n  },\r\n  methods: {\r\n    startTimer() {\r\n      setInterval(() => {\r\n        this.elapsedTime += 1;\r\n        this.formatTime();\r\n      }, 1000);\r\n    },\r\n    formatTime() {\r\n      const hours = Math.floor(this.elapsedTime / 3600);\r\n      const minutes = Math.floor((this.elapsedTime % 3600) / 60);\r\n      const seconds = this.elapsedTime % 60;\r\n\r\n      this.formattedTime = `${hours} 小时 ${minutes} 分钟 ${seconds} 秒`;\r\n    },\r\n    startNewGame() {\r\n      this.elapsedTime = 0;\r\n      this.formattedTime = '0 小时 0 分钟 0 秒';\r\n    },\r\n    exitGame() {\r\n      this.$router.push('chesslist');\r\n    },\r\n  },\r\n};\r\n</script>\r\n\r\n<style scoped>\r\n.img-field {\r\n  position: relative;\r\n}\r\n\r\n.chess-piece {\r\n  position: absolute;\r\n  width: 50px; /* Adjust the size of the chess piece as needed */\r\n  height: 50px;\r\n  border-radius: 50%;\r\n}\r\n\r\n.black-piece {\r\n  background-color: black;\r\n  /* Add other styles for the black piece as needed */\r\n}\r\n\r\n.white-piece {\r\n  background-color: white;\r\n  /* Add other styles for the white piece as needed */\r\n}\r\n</style>\r\n"]},"metadata":{},"sourceType":"module"}